<div class="row">
  <div class="col-md-3 col-sm-6" style="margin-left: 10px;">
    <h4>Rooms</h4>
    <%= render partial: "rooms/form" %>

    <div>
      <%= turbo_stream_from "rooms" %>
      <div id="rooms">
        <%= render @rooms %>
      </div>
    </div>
  </div>

  <div class="col-md-2  order-md-last">
    <% if current_user %>
      <h4>Users</h4>
      <div>
        <%= turbo_stream_from "users" %>
        <div id="users">

          <%= render @users %>

        </div>
      </div>
    <% end %>
  </div>

  <div id="room_container" class="col-md-6 col-sm-8 bg-black text-light">

    <% if @individual_room %>
      <div id="individual_room">
        <h4 class="text-center"><%= @user&.username || @individual_room.name %></h4>
        <%= turbo_stream_from @individual_room %>
        <div id="messages" data-controller="scroll">
          <%= render @messages %>
        </div>
        <%= render partial: "messages/form" %>
      </div>
    <% end %>

  </div>
</div>
